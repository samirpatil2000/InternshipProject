<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EnterInfoActivity">


    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_image_register"
            android:scaleType="centerCrop" android:id="@+id/appCompatImageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="4dp"
            android:text="Enter Details"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.141"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"/>
    <Spinner
            android:layout_width="320dp"
            android:layout_height="53dp"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/spinner_breedInfo" app:layout_constraintHorizontal_bias="0.483"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/ownerNameInfo">
    </Spinner>
    <EditText
            android:layout_width="110dp"
            android:layout_height="53dp"
            android:inputType="number"
            android:ems="10"
            android:textColor="@android:color/white"
            android:id="@+id/ageEtInfo" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_breedInfo"
            app:layout_constraintStart_toStartOf="@+id/appCompatImageView" android:layout_marginStart="44dp"
            android:hint="Age"/>
    <Spinner
            android:layout_width="180dp"
            android:layout_height="53dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/spinner_gender" android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/ageEtInfo" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner_breedInfo"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="53dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dogNameInfo"
            android:hint="Dog Name" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="19dp" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="53dp"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:ems="10"
            android:id="@+id/ownerNameInfo"
            android:hint="Owner Name" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="19dp" app:layout_constraintTop_toBottomOf="@+id/dogNameInfo"/>
    <ImageButton
            android:layout_width="58dp"
            android:layout_height="53dp" app:srcCompat="@drawable/ic_location"
            android:background="#A3071615"
            android:id="@+id/setLocationInfo" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/ageEtInfo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"/>
    <TextView
            android:text="Address"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/locationAddresssInfoTv" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/ageEtInfo" android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/setLocationInfo"/>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationAddresssInfoTv" />


</androidx.constraintlayout.widget.ConstraintLayout>